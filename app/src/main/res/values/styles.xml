<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.quoteContainer" parent="Widget.MaterialComponents.CardView">
<!--        <item name="cardBackgroundColor">@android:color/transparent</item>-->
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">7dp</item>
    </style>

    <style name="AppTheme.quoteText" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/main_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">16sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">20sp</item>
    </style>

    <style name="AppTheme.characterText" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/main_font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">14sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">18sp</item>
    </style>

    <style name="AppTheme.characterText.item" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/main_font</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:breakStrategy" tools:targetApi="m">balanced</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">12sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">16sp</item>
    </style>

    <style name="AppTheme.characterItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">3dp</item>
        <item name="cardMaxElevation">5dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="AppTheme.sectionTitles" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/main_font</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">10sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">14sp</item>
    </style>

    <style name="AppTheme.moreButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/main_font</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">10sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">14sp</item>
    </style>
</resources>